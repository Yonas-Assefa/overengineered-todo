{
  "name": "overengineered todo backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "copy-migrations": "cp -r src/infrastructure/database/migrations dist/src/infrastructure/database/",
    "build": "tsc && npm run copy-migrations",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production npm run build && NODE_ENV=production npm run start",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "lint:fix": "biome check src/ --fix",
    "typeorm": "ts-node ./node_modules/typeorm/cli -d ./src/infrastructure/database/data-source.ts",
    "migration:generate": "npm run typeorm migration:generate --",
    "migration:create": "npx typeorm migration:create",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:show": "npm run typeorm migration:show"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/chai": "^4.3.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "chai": "^4.3.10",
    "dotenv": "^16.4.7",
    "mocha": "^10.2.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.21",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "express": "^4.18.2",
    "http-status": "^2.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm-ts-node-commonjs": "^0.3.20",
    "winston": "^3.17.0"
  }
}
